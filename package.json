{
  "name": "athena-query",
  "version": "1.0.0",
  "description": "Query AWS Athena",
  "author": "hawyar",
  "type": "module",
  "license": "MIT",
  "main": "dist/query.cjs",
  "scripts": {
    "test": "tap test.js --reporter=specy -J --color --no-coverage ",
    "build": "esbuild lib/query.js --minify --format=cjs --bundle --platform=node --outfile=dist/query.cjs && esbuild lib/query.js --minify --format=esm --platform=node --outfile=dist/query.mjs"
  },
  "exports": {
    ".": {
      "default": {
        "require": "./dist/query.cjs",
        "default": "./dist/query.mjs"
      }
    }
  },
  "standard": {
    "ignore": [
      "dist",
      "node_modules",
      ".nyc_output",
      "coverage"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.13.4",
    "standard": "^17.0.0",
    "tap": "^15.2.3"
  },
  "peerDependencies": {
    "@aws-sdk/client-athena": "^3.252.0",
    "@aws-sdk/credential-providers": "^3.252.0"
  }
}
