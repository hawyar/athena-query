{
  "name": "athena-query",
  "version": "1.0.0",
  "description": "",
  "author": "hawyar",
  "main": "dist/athena.cjs",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "lint": "standard --fix",
    "test": "tap test.js --reporter=specy -J --color --no-coverage ",
    "build": "esbuild lib/athena.js --minify --format=cjs --bundle --platform=node --outfile=dist/athena.cjs && esbuild lib/athena.js --minify --format=esm --bundle --platform=node --outfile=dist/athena.mjs"
  },
  "exports": {
    ".": {
      "default": {
        "require": "./dist/athena.cjs",
        "default": "./dist/athena.mjs"
      }
    }
  },
  "standard": {
    "ignore": [
      "dist",
      "node_modules",
      ".nyc_output",
      "coverage"
    ]
  },
  "devDependencies": {
    "esbuild": "^0.13.4",
    "standard": "^17.0.0",
    "tap": "^15.2.3"
  },
  "dependencies": {
    "@aws-sdk/client-athena": "^3.231.0",
    "@aws-sdk/credential-provider-node": "^3.231.0"
  }
}
